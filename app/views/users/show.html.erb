<div class="user-posts-wrapper">
  <h1> Here is an author with her/his corresponding bio and his/her posts </h1>
  <div class="user-posts">
    <div class="user-link-container">
        <img class="post-box" src ="<%= user.photo %>" alt="<%= user.name %>'s profile picture">
        <div class="user-link-wrapper">
          <h2> <%= link_to user.name, user_path(user) %> </h2>
          <p> Number of posts: user.posts_counter</p>
        </div>
    </div>

    <div class="bio-container">
      <p class="bio-title"> Bio </p>
      <p class="bio-text"> <%= @user.bio%> </p>
    </div>
    <div class="post-container">
      <% @user.three_recent_posts.each do |post| %>
        <p class="post-title"> <%= link_to post.title, user_post_path(@user, post) %> </p>
        <p class="post-text"> <%= post.text %> </p>
        <p class="comments-likes-count">
          Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %>
        </p>
      <% end %>
    </div>
  </div>
  <button class="btn btn-all-posts">
    <%= link_to 'See all posts', user_posts_path(@user) %>
  </button>
</div>
