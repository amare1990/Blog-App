<div class="users-index-wrapper"
<h2>Here is list of users and their corresponding number of posts</h2>

<ul class="users-container">
  <% @users.each do |user| %>
    <li class="user-link-container">
      <img class="post-box" src ="<%= user.photo %>" alt="<%= user.name %>'s profile picture">
      <div class="user-link-wrapper">
        <h2> <%= link_to user.name, user_path(user) %> </h2>
         <p> Number of posts: user.posts_counter</p>
      </div>
    </li>
  <% end %>
</ul>

</div>
