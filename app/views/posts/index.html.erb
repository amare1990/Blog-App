<div class="posts-wrapper">
  <h1 class="header-text"> Here is list of posts for an author with author_id = id </h1>

  <div class="posts-container">
    <div class="author-info user-link-container">
      <%= image_tag("/images/#{@user.photo}", :class => 'post-box')%>
      <div class="user-link-wrapper">
      <p class="post-link"> <%= link_to @user.name, user_path(@user) %> </p>
          <p class="posts-counter"> Number of posts: <%= @user.posts_counter %> </p>
      </div>
    </div>

    <ul class="posts-list">
      <% @user.posts.each do |post| %>
        <li class="post-list-item">
          <p class="post-title"> <%= link_to post.title, post_show_path(@user, post) %> </p>
          <p class="post-text"> <%= post.text %> </p>
          <p class="comments-likes-count">
            Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %>
          </p>
        </li>

       <div class="comments-container">
        <% post.five_recent_comments.includes(:author).each do |comment| %>
          <li class="comments-list">
            <p class="comment-text"> <%= comment.author.name%>: <%= comment.text %> </p>
          </li>
        <% end %>
       </div>
      <% end %>
    </ul>

  <div
  <button class="btn btn-pagination"> Pagination </button>
</div>
